{
    "manifest_version": 3,
    "name": "ES Forum Post Preview",
    "description": "Show post previews on hover for discuss.eroscripts.com",
    "version": "1.0.0",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_title": "Toggle Preview",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://discuss.eroscripts.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "preview.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icon128.png"
    }
}